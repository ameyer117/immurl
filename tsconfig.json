{
  "compilerOptions": {
    "target": "es2022", //Compile target
    "lib": ["es2022", "DOM", "DOM.Iterable"], //Tell TypeScript what built-in types to include
    "esModuleInterop": true,
    "module": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}
